<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <form class="form new-comment-form">
    <div class="form-group">
      <label for="comment">Comment:</label>
      <textarea class="form-input" id="comment" name="comment"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Create</button>
    </div>
  </form>
  {{#if comments.length}}
  <div class="col-md-6 post-list">
    <h3>Current comments:</h3>

    {{#each comments as |comment|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4>{{comment.comment}}</h4>
        <p>Data posted: {{format_date comment.date_created}}</p>

      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>
 <script src="/js/comment.js"></script>